{% extends 'base.html.twig' %}

{% block title %}
	Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="flex justify-center text-rose-700 py-14">
		<div class="inline-block shadow-lg bg-rose-50 p-8 px-32 m-4">
			<h1 class="text-3xl">Inscription</h1>

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			{# Boutons en bas de page #}
			<div class="flex flex-wrap">
				<button type="submit" class="inline-flex items-center px-3 py-2 text-md font-medium text-center text-white bg-rose-700 rounded-lg hover:bg-rose-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
					S'inscrire
				</button>

				<div>
					<a href="{{ path("app_login") }}" class="ml-6 block text-rose-800 inline-block mt-0 hover:text-rose-600 bg-rose-300 hover:bg-rose-200 px-5 py-2 rounded-lg">
						J'ai déjà un compte
					</a>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>

{% endblock %}
